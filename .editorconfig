root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
curly_bracket_next_line = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,py}]
intent_style = tab

# Tab indentation (no size specified)
[*.js]
indent_style = tab
